#compdef facter
#autoload

# facter zsh completion
# inspiration: https://github.com/tylerpace/puppet-completion-zsh

_facter() {

    local -a _1st_arguments
    _1st_arguments=(
        'architecture:Return the CPU hardware architecture.'
        'domain:Return the host’s primary DNS domain name.'
        'facterversion:Return the version of the facter module.'
        'fqdn:Return the fully-qualified domain name of the host.'
        'gid:eturn the GID (group identifier) of the user running Puppet.'
        'hardwareisa:Returns hardware processor type.'
        'hardwaremodel:Returns the hardware model of the system.'
        'hostname:Return the system’s short hostname.'
        'id:Return the currently running user ID.'
        'interfaces:Generates the following facts on supported platforms: <interface>_ipaddress, <interface>_ipaddress6, <interface>_macaddress, <interface>_netmask, and <interface>_mtu.'
        'ipaddress:Return the main IP address for a host.'
        'ipaddress_en0:'
        'ipaddress_lo0:'
        'ipaddress_vboxnet0:'
        'is_virtual:Return true or false depending on whether a machine is virtualized or not.'
        'kernel:Return the operating system’s name.'
        'kernelmajversion:Return the operating system’s release number’s major value.'
        'kernelrelease:Return the operating system’s release number.'
        'kernelversion:Return the operating system’s kernel version.'
        'macaddress:Returns the MAC address of the primary network interface.'
        'macaddress_bridge0:'
        'macaddress_en0:'
        'macaddress_en1:'
        'macaddress_en2:'
        'macaddress_p2p0:'
        'macaddress_vboxnet0:'
        'macosx_buildversion:Return information about macosx build version.'
        'macosx_productname:Return information about macosx product name.'
        'macosx_productversion:Return information about macosx product version.'
        'macosx_productversion_major:Return information about macosx product version (major).'
        'macosx_productversion_minor:Return information about macosx product version (minor).'
        'memoryfree:Return information about free memory.'
        'memoryfree_mb:Return information about free memory (mb).'
        'memorysize:Return information about memory size.'
        'memorysize_mb:Return information about memory size (mb).'
        'mtu_bridge0:'
        'mtu_en0:'
        'mtu_en1:'
        'mtu_en2:'
        'mtu_gif0:'
        'mtu_lo0:'
        'mtu_p2p0:'
        'mtu_stf0:'
        'mtu_vboxnet0:'
        'netmask:Returns the netmask for the main interfaces.'
        'netmask_en0:'
        'netmask_lo0:'
        'netmask_vboxnet0:'
        'network_en0:Get IP, network, and netmask information for available network interfaces.'
        'network_lo0:'
        'network_vboxnet0:'
        'operatingsystem:Return the name of the operating system.'
        'operatingsystemmajrelease:Returns the major release of the operating system.'
        'operatingsystemrelease:Returns the release of the operating system.'
        'os:Return various facts related to the machine’s operating system.'
        'osfamily:Returns the operating system.'
        'path:Returns the $PATH variable.'
        'processorcount:Return the number of processors.'
        'processors:Additional facts about the machine’s CPU’s, including processor lists, models, counts, and speeds.'
        'productname:'
        'ps:Internal fact for what to use to list all processes. Used by the Service type in Puppet.'
        'puppetversion:Return the version of Puppet installed.'
        'rubyplatform:Returns the platform of Ruby that Facter is running under.'
        'rubysitedir:Returns the platform of Ruby that Facter is running under.'
        'rubyversion:Returns the version of Ruby that Facter is running under.'
        'sp_boot_mode:'
        'sp_boot_rom_version:'
        'sp_boot_volume:'
        'sp_cpu_type:'
        'sp_current_processor_speed:'
        'sp_kernel_version:'
        'sp_l2_cache_core:'
        'sp_l3_cache:'
        'sp_local_host_name:'
        'sp_machine_model:'
        'sp_machine_name:'
        'sp_number_processors:'
        'sp_os_version:'
        'sp_packages:'
        'sp_physical_memory:'
        'sp_platform_uuid:'
        'sp_secure_vm:'
        'sp_serial_number:'
        'sp_smc_version_system:'
        'sp_uptime:'
        'sp_user_name:'
        'swapencrypted:'
        'swapfree:'
        'swapfree_mb:'
        'swapsize:'
        'swapsize_mb:'
        'system_uptime:'
        'timezone:Return the machine’s time zone.'
        'uptime:Return the system uptime in a human-readable format.'
        'uptime_days:Return just the number of days of uptime.'
        'uptime_hours:Return just the number of hours of uptime.'
        'uptime_seconds:Return just the number of seconds of uptime.'
        'virtual:Determine if the system’s hardware is physical or virtualized.'
    )

    if (( CURRENT == 2 )); then
        _describe -t commands "facter subcomand" _1st_arguments
    return
    fi

}

_facter